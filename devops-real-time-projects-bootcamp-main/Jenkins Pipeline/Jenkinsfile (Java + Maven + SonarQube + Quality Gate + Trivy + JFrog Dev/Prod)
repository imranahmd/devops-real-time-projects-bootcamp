pipeline {
    agent any

    parameters {
        choice(
            name: 'DEPLOY_ENV',
            choices: ['dev', 'prod'],
            description: 'Select environment to publish artifact'
        )
    }

    tools {
        maven 'Maven3'
        jdk 'JDK11'
    }

    environment {
        ARTIFACTORY_SERVER = 'artifactory_server'

        DEV_REPO  = 'libs-dev-local'
        PROD_REPO = 'libs-prod-local'

        PROJECT_NAME = 'my-java-app'

        SONARQUBE_ENV = 'SonarServer'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/your-org/your-java-project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv("${SONARQUBE_ENV}") {
                        sh """
                        mvn sonar:sonar \
                            -Dsonar.projectKey=${PROJECT_NAME} \
                            -Dsonar.projectName=${PROJECT_NAME} \
                            -Dsonar.java.binaries=target/
                        """
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    timeout(time: 3, unit: 'MINUTES') {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "‚ùå Quality Gate Failed: ${qg.status}"
                        }
                    }
                }
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

        stage('Trivy Scan - Filesystem') {
            steps {
                sh """
                trivy fs --exit-code 1 --severity HIGH,CRITICAL .
                """
            }
        }

        stage('Trivy Scan - JAR File') {
            steps {
                sh """
                trivy fs --exit-code 1 --severity HIGH,CRITICAL target/
                """
            }
        }

        stage('Publish Artifact to JFrog') {
            steps {
                script {
                    def server = Artifactory.server("${ARTIFACTORY_SERVER}")

                    def targetRepo = (params.DEPLOY_ENV == 'dev') ? DEV_REPO : PROD_REPO

                    echo "üì¶ Deploying JAR to: ${targetRepo}"

                    def uploadSpec = """{
                        "files": [
                            {
                                "pattern": "target/*.jar",
                                "target": "${targetRepo}/${PROJECT_NAME}/"
                            }
                        ]
                    }"""

                    server.upload(spec: uploadSpec)
                }
            }
        }

    }

    post {
        success {
            echo "üéâ Pipeline completed successfully for ${params.DEPLOY_ENV.toUpperCase()} environment!"
        }
        failure {
            echo "‚ùå Pipeline failed!"
        }
    }
}
